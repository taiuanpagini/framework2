<%= form_for [:admin, @user], html: { class: "form-horizontal form-bordered" } do |f| %>
	<div class="form-group">
		<%= f.label :name, "Nome Completo", class: "control-label col-md-3" %>
		<div class="col-md-9">
			<%= f.text_field :name, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :email, "Email", class: "control-label col-md-3" %>
		<div class="col-md-9">
			<%= f.text_field :email, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :password, "Senha", class: "control-label col-md-3" %>
		<div class="col-md-9">
			<%= f.password_field :password, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :avatar, "Imagem", class: "control-label col-md-3" %>
		<div class="col-md-9">
			<%= f.file_field :avatar, id: "example-file-input" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :role, "Imagem", class: "control-label col-md-3" %>
		<div class="col-md-9">
			<%= f.select(:role, User.roles.keys.map {|role| [role.titleize,role]}, {}, {:class => 'form-control m-bot15'}) %>
		</div>
	</div>
	</div>
	<div class="form-group form-actions">
		<div class="col-md-9 col-md-offset-3">
			<%= f.submit "Atualizar Dados", class: "btn btn-sm btn-primary" %>
			<button type="reset" class="btn btn-sm btn-warning"><i class="fa fa-repeat"></i> Limpar Formul√°rio</button>
		</div>
	</div>
<% end %>